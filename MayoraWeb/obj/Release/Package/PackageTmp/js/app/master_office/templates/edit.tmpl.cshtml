@using Core.Web.Helpers
@model MyWeb.ViewModels.office_master.sp_office_master_Model
@{
    var editModel = Html.Angular().ModelFor("vm.masteroffice");
}
@*//o20170928*@
<form novalidate
      name="vm.form"
      ng-submit="vm.save()">
    <fieldset ng-disabled="vm.saving">
        <div class="modal-header">
            <h3 class="modal-title">{{vm.title}} Office Master</h3>
        </div>

        <div class="modal-body">
            <div class="row">
                <div class="col-lg-6">
                    @editModel.FormGroupFor(x => x.OfficeId).SetLabelSize("col-lg-3").SetInputSize("col-lg-9").Disabled("true")
                </div>
                <div class="col-lg-6">
                    @editModel.FormGroupFor(x => x.OfficeDesc).SetLabelSize("col-lg-3").SetInputSize("col-lg-9")
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    @editModel.FormGroupFor(x => x.OfficeT24_KD_Cabang).SetLabelSize("col-lg-3").SetInputSize("col-lg-9").Disabled("true")
                </div>
                <div class="col-lg-6">
                    @editModel.FormGroupFor(x => x.OfficeT24_Nama_Cabang).SetLabelSize("col-lg-3").SetInputSize("col-lg-9").
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    @(Html.Angular().PicklistFor("vm.selected_area")
                            .Title("Area")
                            .Id("areaId")
                            .Name("areaName")
                            .ListService("vm.areaGetPage")
                            .OnSelect("vm.onSelect_area()")
                            //.HideColumns("AreaId")
                            .Message("vm.message")
                            .AddValidation("vm.is_area_valid", "Harus Diisi!")
                            .SetLabelSize("col-lg-3").SetInputSize("col-lg-9"))
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Angular().AlertGlobal("vm.message")
                </div>
            </div>
            <button class="btn btn-success">Edit</button>
            <button type="button" class="btn btn-warning" ng-click="$dismiss()">Cancel</button>
        </div>

    </fieldset>
</form>

