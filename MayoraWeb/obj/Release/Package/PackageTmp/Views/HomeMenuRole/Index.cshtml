@using Core.Web.Helpers
@using MyWeb.ViewModels.Menus
@model dynamic
@{
    Layout = null;
}
<div ng-controller="HomeMenuRoleController as vm">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Dashboard Role
                <a class="pull-right" href="" ng-click="vm.add()"><i class="fa fa-plus-circle"></i></a>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    @(Html.Angular()
    .GridFor("vm.HomeMenuRoleGetPage")
    .Title("List Dashboard Role")
    .Message("vm.message")
    .TableActions("vm.tableActions")
    .RefreshData("vm.refreshData")
            //.SelectColumn(true)
    .Columns<HomeMenuRoleViewModel>(config =>
    {
        config.Add(x => x.Application);
        config.Add(x => x.RoleName);
        config.Add(x => x.FolderView);
        config.Add(x => x.NameCshtml);
        config.Add(x => x, "Action", null, "<div><a href='' title='Edit' ng-click='grid.appScope.tableActions.onEdit(row.entity)'><i class='fa fa-edit fa-lg'></i></a> <a href='' title='Detail' ng-click='grid.appScope.tableActions.onDetail(row.entity)'><i class='fa fa-eye fa-lg'></i></a> <a href='' title='Delete' ng-click='grid.appScope.tableActions.onDelete(row.entity)'><i class='fa fa-trash fa-lg'></i></a></div>");
    }))

</div>
