<script type="text/ng-template" id="navbarTree">
    <a href="" ng-if="navbar.children.length > 0" title="{{ navbar.item.description }}">
        <i class="{{ navbar.item.faicon }}"></i>
        <span ng-bind="navbar.item.text"></span>
        <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
        </span>
    </a>
    <a href="#" ng-if="navbar.children.length <= 0" ui-sref="{{ navbar.item.name }}" title="{{ navbar.item.description }}">
        <i class="{{ navbar.item.faicon }}"></i>
        <span ng-bind="navbar.item.text"></span>
    </a>
    <ul class="treeview-menu" ng-if="navbar.children.length > 0">
        <li ng-repeat="navbar in navbar.children" ng-include="'navbarTree'"></li>
    </ul>
</script>

