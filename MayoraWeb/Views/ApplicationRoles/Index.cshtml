@using Core.Web.Helpers
@using MyWeb.ViewModels.Applications
@model string
@{
    Layout = null;
}
<div class="row" ng-controller="applicationRoleController as vm">
    <div class="col-lg-4">
        <div class="box">
            <div class="box-header with-border">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">List Role</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <!-- TO DO List -->
                <div class="box box-primary">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="input-group">
                            <input type="text" ng-model="vm.newRole" class="form-control">
                            <a href="" ng-click="vm.tambahRole(vm.newRole)" class="btn input-group-addon"><i class="fa fa-plus-square-o"></i></a>
                        </div>
                        <hr />
                        <div class="input-group">
                            <input type="text" ng-model="vm.searchRole" class="form-control">
                            <span class="input-group-addon"><i class="fa fa-search"></i></span>
                        </div>
                        <ul class="todo-list">
                            <li ng-repeat="item in vm.listRole | filter:vm.searchRole | orderBy:'name'">
                                <a href="" ng-click="vm.pilihRole(item)">
                                    <!-- todo text -->
                                    <span class="text">{{item.name}}</span>
                                    <!-- General tools such as edit or delete-->
                                    <div class="tools">
                                        <i ng-click="vm.hapusRole(item)" class="fa fa-trash-o"></i>
                                        <i ng-click="vm.pilihRole(item)" class=" fa fa-hand-o-right"></i>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- ./box-body -->
        </div>
    </div>
    <div class="col-lg-8" ng-if="vm.selectedrole">
        <div class="box">
            <div class="box-header with-border">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Detail Role - {{vm.selectedrole.name}}
                </h3> 
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="col-md-4">
                    <div class="box">
                        <div class="box-header with-border">
                            <i class="ion ion-clipboard"></i>
                            <h3 class="box-title">List Application</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <!-- TO DO List -->
                            <div class="box box-primary">
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <div class="input-group">
                                        <input type="text" ng-model="vm.searchText" class="form-control">
                                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                    </div>
                                    <ul class="todo-list">
                                        <li class="{{(app.used == 1) ? 'danger' : ''}}" ng-repeat="app in vm.listapplication | filter:vm.searchText | orderBy:['-used','applicationName']">
                                            <a href="" ng-click="vm.pilihApp(app)">
                                                <!-- todo text -->
                                                <span class="text">{{app.applicationName}}</span>
                                                <!-- General tools such as edit or delete-->
                                                <div class="tools">
                                                    <i class="fa fa-hand-o-right"></i>
                                                </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- /.box -->
                        </div>
                        <!-- ./box-body -->
                    </div>
                </div>
                <div class="col-md-8" ng-if="vm.selectedapp">
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <i class="ion ion-clipboard"></i>
                            <h3 class="box-title">Menu - {{vm.selectedapp.applicationName}}</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="callout callout-info">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <h4><span><i class="{{vm.selectedapp.applicationIcon}}"></i></span>  {{vm.selectedapp.applicationName}}</h4>
                                        <p>{{vm.selectedapp.applicationDescription}} </p>
                                    </div>
                                </div>
                            </div>
                            <ul class="todo-list">
                                <li class="{{(navbar.item.used) ? 'todo-list-danger' : 'todo-list-info'}}" ng-repeat="navbar in vm.listmenuselectedapp" ng-include="'menuTree'"></li>
                            </ul>
                            <!-- /.box -->
                        </div>

                        <!-- ./box-body -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/ng-template" id="menuTree">
    <span><i class="{{navbar.item.imageClass.imageClassName}}"></i></span>
    <input type="checkbox" ng-change="vm.changeLink(navbar.item)" ng-model="navbar.item.used" name="name" value=" " />
    <!-- todo text -->
    <span class="text" ng-bind="navbar.item.name"></span>
    <!-- Emphasis label -->
    <small ng-bind="navbar.item.text"></small>
    <!-- General tools such as edit or delete-->
    <div class="tools">
        @*<i class="fa fa-plus" ng-click="vm.editNavbar('Add', navbar.item, null)" title="Add Child"></i>
            <i class="fa fa-edit" ng-click="vm.editNavbar('Edit', null, navbar.item)" title="Edit"></i>
            <i class="fa fa-trash-o" ng-click="vm.deleteNavbar(navbar.item)" title="Delete"></i>
            <i class="fa fa-chevron-up" ng-click="vm.moveupNavbar(navbar.item)" title="move up"></i>
            <i class="fa fa-chevron-down" ng-click="vm.movedownNavbar(navbar.item)" title="move down"></i>*@
    </div>
    <ul class="todo-list" ng-if="navbar.children.length > 0">
        <li class="{{(navbar.item.used) ? 'todo-list-danger' : 'todo-list-info'}}" ng-repeat="navbar in navbar.children" ng-include="'menuTree'"></li>
    </ul>
</script>
