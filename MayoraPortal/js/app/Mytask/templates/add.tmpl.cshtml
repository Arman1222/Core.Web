@using Core.Web.Helpers
@model Core.Web.Models.Applications.MyTask
@{
    var _model = Html.Angular().ModelFor("vm.mytask");
}
<form class="form-horizontal"
          novalidate
          name="vm.form"
          ng-submit="vm.form.$valid && vm.save()">
        <fieldset ng-disabled="vm.saving">

            <div class="modal-header">
                <h3 class="modal-title">{{vm.title}}</h3>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        @_model.FormGroupFor(x => x.Title)
                        @_model.FormGroupFor(x => x.startdate)
                        @_model.FormGroupFor(x => x.enddate)
                    </div>
                    <div class="col-lg-6">
                        @(Html.Angular().TexthtmlFor("vm.mytask.description")
                              .Title("Description")
                              .editorFitur(editorFitur.simple)
                        )
                    </div>
                </div>
            </div>
                
            <div class="modal-footer">
                <button class="btn btn-success">Add</button>
                <button type="button" class="btn btn-warning" ng-click="$dismiss()">Cancel</button>
            </div>

        </fieldset>
    </form>

