@using Core.Web.Helpers

<div class="modal-header">
    <h3><i class="fa fa-laptop"></i>Search {{title}}</h3>    
</div>

<div class="modal-body">
    <div style="margin-bottom: 5px;">
        <a class="btn btn-sm btn-danger" ng-click="close()"> <span class="glyphicon glyphicon-chevron-left"></span>  Close</a>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @Html.Angular().AlertGlobal("vm.message")
        </div>
    </div>

    <modal-grid grid-data="listService"
               title="{{title}}"
               message="vm.message"
               select-column="true"
               table-actions="tableActions"
               sort-by="sortBy"
               search-params="searchParams"
               refresh-data="refreshData"
               show-columns="showColumns"
               hide-columns="hideColumns" />
  

</div>

<div class="modal-footer">

</div>
