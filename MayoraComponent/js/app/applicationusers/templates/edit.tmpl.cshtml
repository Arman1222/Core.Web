@using Core.Web.Helpers
@model  MyWeb.Models.ApplicationUser
@{
    var company = Html.Angular().ModelFor("vm.applicationusers");
}
<form novalidate
      name="vm.form"
      ng-submit="vm.form.$valid && vm.save()">
    <fieldset ng-disabled="vm.saving">

        <div class="modal-header">
            <h3 class="modal-title">{{vm.title}}</h3>
        </div>

        <div class="modal-body">

            <div class="row">
                <div class="col-lg-12">
                    @Html.Angular().AlertGlobal("vm.message")
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="control-label col-md-2">NIK</label>
                        <div class="col-md-10">
                            <p class="form-control-static">{{vm.applicationusers.nik}}</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">User Name</label>
                        <div class="col-md-10">
                            <p class="form-control-static">{{vm.applicationusers.userName}}</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Full Name</label>
                        <div class="col-md-10">
                            <p class="form-control-static">{{vm.applicationusers.fullName}}</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">E-mail</label>
                        <div class="col-md-10">
                            <p class="form-control-static">{{vm.applicationusers.email}}</p>
                        </div>
                    </div>

                    @company.FormGroupFor(c => c.NIK)
                    
                    @*@(Html.Angular().PicklistFor("vm.applicationusers.company")
                              .Title("Company")
                              .ListService("vm.companyGet")
                    )*@

                    @(Html.Angular().PicklistFor("vm.applicationusers.company")
                              .Title("Company")
                              .Id("id")
                              .Name("nama")
                                      .ListService("vm.companyGet")
                              //.OnSelect("vm.onSelectCustomerTemenos()")
                              .Message("vm.message")
                              .SetLabelSize("col-sm-4")
                              .SetInputSize("col-sm-8")
                    )

                    @(Html.Angular().MultiselectFor("vm.selectedRole")
                              .Title("Role Selected")
                              .Name("name")
                              .ListItem("vm.listRole")
                            //.BeforeSelect("vm.selectItemCallback")
                            //.BeforeRemove("vm.removeItemCallback")
                              .SetLabelSize("col-sm-4")
                              .SetInputSize("col-sm-8")
                    )

                    @*<div class="form-group">
                        @Html.Label("Branch", new { @class = "control-label col-sm-2" })
                        <div class="col-md-5">
                            @Html.DropDownList("BranchId", (IEnumerable<SelectListItem>)ViewBag.BranchIdSelectList, "(None)", new { @class = "form-control" })
                        </div>
                    </div>
                    <br />*@

                    @*<div class="form-group">*@

                    @*<ul class="checkbox-grid">
                        @foreach (var item in Model.RolesList)
                        {
                            <li><input type="checkbox" name="RolesSelectedOnView" value="@item.Value" checked="@item.Selected" />@item.Value</li>
                        }
                    </ul>*@

                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn btn-success">Save</button>
            <button type="button" class="btn btn-warning" ng-click="$parent.$dismiss()">Cancel</button>
        </div>

    </fieldset>
</form>